name: Flutter CI with Docker

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  flutter-docker:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Build Docker image
        run: docker build -t flutter-app .

      - name: Run Flutter tests in Docker
        run: docker run --rm -v ${{ github.workspace }}:/app flutter-app flutter test
